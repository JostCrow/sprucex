---
import Layout from "../layouts/Layout.astro";
import examplesMarkup from "../fragments/examples-markup.html?raw";
---

<Layout title="SpruceX - Examples">
    <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/gridstack@10.3.1/dist/gridstack.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js" is:inline></script>
    <script
        src="https://cdn.jsdelivr.net/npm/gridstack@10.3.1/dist/gridstack-all.js"
        is:inline
    ></script>

    <script is:inline>
        SpruceX.store(
            "global",
            {
                notifications: 0,
                user: { name: "Guest" },
            },
            { persist: true },
        );
    </script>

    <Fragment set:html={examplesMarkup} />
</Layout>
